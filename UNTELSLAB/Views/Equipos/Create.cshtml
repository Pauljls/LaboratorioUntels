@model UNTELSLAB.Models.EquipoLaboratorio
@{
    ViewData["Title"] = "Crear Equipo de Laboratorio";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdLaboratorio" class="control-label">Laboratorio</label>
                <select asp-for="IdLaboratorio" class="form-control" asp-items="ViewBag.Laboratorios">
                    <option value="">-- Seleccione un laboratorio --</option>
                </select>
                <span asp-validation-for="IdLaboratorio" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="EquiposLaboratorio" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}