@using System.Linq
@model List<UNTELSLAB.Models.EquipoLaboratorio>
<!DOCTYPE html>
<html lang="es">
<head>
    name
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 bg-dark sidebar d-flex flex-column align-items-center">
                <img src="path_to_logo_image" alt="Logo">
                <ul class="nav flex-column w-100">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-laptop"></i> Laboratorios
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-desktop"></i> Equipos de laboratorio
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-clipboard-list"></i> Inventario
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-tools"></i> Mantenimiento
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Main Content -->
            <main role="main" class="col-md-10 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">LABORATORIOS SISTEMAS</h1>
                    <span>Bienvenido Administrador</span>
                </div>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Codigo</th>
                            <th scope="col">Equipo/Instrumento</th>
                            <th scope="col">Marca</th>
                            <th scope="col">Modelo</th>
                            <th scope="col">Serie</th>
                            <th scope="col">Fecha Oper.</th>
                            <th scope="col">Procesador</th>
                            <th scope="col">Sistema Operativo</th>
                            <th scope="col">Memoria</th>
                            <th scope="col">Año de fabricacion</th>
                            <th scope="col">Años</th>
                            <th scope="col">Lugar</th>
                            <th scope="col">Manual</th>
                            <th scope="col">Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var equipoLaboratorio in Model)
                        {
                            <tr>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.Codigo</td>
                                <td>@equipoLaboratorio.Nombre</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.Marca</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.TipoModelo</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.Serie</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.FechaOperatividad</td>
                                <td>@equipoLaboratorio.DatosEquipo?.Procesador</td>
                                <td>@equipoLaboratorio.DatosEquipo?.SistemaOperativo</td>
                                <td>@equipoLaboratorio.DatosEquipo?.Memoria</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.AnoFabricacion</td>
                                <td>@equipoLaboratorio.FichaTecnicaEquipo?.FrecuenciaMantenimiento</td>
                                <td>@equipoLaboratorio.Laboratorio?.Nombre</td>
                                <td><!-- Agregar campo para Manual --></td>
                                <td><!-- Agregar campo para Estado --></td>
                            </tr>
                        }
                    </tbody>
                </table>


            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>